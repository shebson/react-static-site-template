{
  "name": "react-static-site-template",
  "version": "0.1.0",
  "private": false,
  "license": "MIT",
  "deployment": {
    "__comment__": "Set bucket name to enable uploads to S3",
    "bucket": null,
    "region": "us-east-1",
    "profile": "default"
  },
  "dependencies": {
    "eslint": "^4.9.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "2.7.0",
    "eslint-plugin-jsx-a11y": "6.0.2",
    "eslint-plugin-react": "7.4.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-helmet": "^5.2.0",
    "react-router-dom": "^4.2.2",
    "react-scripts": "1.1.1",
    "react-snapshot": "^1.3.0",
    "styled-components": "^3.1.6"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build && react-snapshot",
    "upload": "s3p sync",
    "deploy": "yarn run build && yarn run upload",
    "lint": "eslint ./src",
    "tdd": "react-scripts test --env=jsdom",
    "test": "yarn run lint && react-scripts test --env=jsdom --coverage",
    "eject": "react-scripts eject"
  },
  "devDependencies": {
    "s3-publish": "^1.0.4"
  }
}
